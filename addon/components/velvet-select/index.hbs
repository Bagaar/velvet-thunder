{{#let (helper "-velvet/class" "velvet-select") as |class|}}
  <select
    class={{-velvet/class-list
      (class)
      (class (or @size "md"))
      (if @isInvalid (class "invalid"))
      (if @isPill (class "pill"))
      (if @isDisabled (class "disabled"))
      (if this.shouldDisplayPlaceholder (class "placeholder"))
      "form-select"
    }}
    disabled={{@isDisabled}}
    {{(if
      (and @onChange (not @isDisabled))
      (modifier this.on "change" this.changeHandler)
    )}}
    ...attributes
  >
    {{#if this.shouldDisplayPlaceholder}}
      <option disabled selected={{true}}>
        {{@placeholder}}
      </option>
    {{/if}}
    {{yield
      (hash
        Option=(component
          "velvet-select/option"
          onRegister=this.registerOption
          selected=@selected
        )
      )
    }}
  </select>
{{/let}}