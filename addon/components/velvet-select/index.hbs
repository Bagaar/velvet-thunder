{{#let (helper "-velvet/class" "velvet-select") as |class|}}
  <select
    class={{-velvet/class-list
      (class)
      (class (or @color "primary"))
      (class (or @size "md"))
      (if @isInvalid (class "invalid"))
      (if (and @placeholder (not this.hasSelection)) (class "placeholder"))
      (if @isRounded (class "rounded"))
      "form-select"
    }}
    disabled={{@isDisabled}}
    {{(if
      (and @onChange (not @isDisabled))
      (modifier this.on "change" this.changeHandler)
    )}}
    ...attributes
  >
    {{#if @placeholder}}
      <option disabled selected={{not this.hasSelection}}>
        {{@placeholder}}
      </option>
    {{/if}}
    {{yield
      (hash
        Option=(component
          "velvet-select/option"
          onRegister=this.registerOption
          selected=@selected
        )
      )
    }}
  </select>
{{/let}}