<div
  class={{-velvet/class-list
    "velvet-progress"
    (concat "velvet-progress-" (-velvet/arg @size "md"))
    (concat "velvet-progress-" (-velvet/arg @variant "primary"))
  }}
  aria-valuemax={{this.max}}
  aria-valuemin={{this.min}}
  aria-valuenow={{this.value}}
  aria-valuetext={{@text}}
  role="progressbar"
  ...attributes
>
  <div class="velvet-progress-line" style={{this.lineStyle}}></div>
</div>