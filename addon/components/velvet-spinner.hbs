<svg
  class={{-velvet/class-list
    "velvet-spinner"
    (concat "velvet-spinner-" (-velvet/arg @size "md"))
  }}
  fill="none"
  role="status"
  stroke="currentColor"
  stroke-width="10"
  viewBox="0 0 80 80"
  xmlns="http://www.w3.org/2000/svg"
  ...attributes
>
  <circle class="velvet-spinner-track" cx="40" cy="40" r="35"></circle>
  <circle
    class="velvet-spinner-line"
    cx="40"
    cy="40"
    r="35"
    stroke-dasharray="40, 160"
    stroke-linecap="round"
  ></circle>
</svg>