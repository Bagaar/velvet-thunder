{{! @glint-nocheck }}

{{#let (helper "-velvet/class" "velvet-checkbox") as |class|}}
  <label
    class={{-velvet/class-list
      (class)
      (class (or @size "md"))
      (if @isDisabled (class "disabled"))
    }}
  >
    <input
      checked={{if @inGroup this.isCheckedInGroup @isChecked}}
      class={{-velvet/class-list (class "input") "form-checkbox"}}
      disabled={{@isDisabled}}
      indeterminate={{@isIndeterminate}}
      name={{@name}}
      type="checkbox"
      {{on
        "change"
        (if
          @inGroup
          (if
            (and @onChangeGroup (not @isDisabled))
            this.changeGroupHandler
            (-velvet/noop)
          )
          (if
            (and @onChange (not @isDisabled)) this.changeHandler (-velvet/noop)
          )
        )
      }}
      ...attributes
    />
    {{yield}}
  </label>
{{/let}}