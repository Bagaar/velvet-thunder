{{#let (helper "-velvet/class" "velvet-checkbox") as |class|}}
  <input
    checked={{@isChecked}}
    class={{-velvet/class-list
      "form-checkbox"
      (class)
      (class (or @color "primary"))
      (class (or @size "md"))
      (if @isInvalid (class "invalid"))
    }}
    disabled={{@isDisabled}}
    indeterminate={{@isIndeterminate}}
    type="checkbox"
    {{(if (and @onChange (not @isDisabled)) (modifier this.on "change" (fn this.invokeHandler @onChange)))}}
    ...attributes
  >
{{/let}}