{{#let (helper "-velvet/class" "velvet-input") as |class|}}
  <input
    class={{-velvet/class-list
      (class)
      (class (or @size "md"))
      (class (or @variant "primary"))
      (if @isInvalid (class "invalid"))
      (if @isPill (class "pill"))
      (if @isDisabled (class "disabled"))
      "form-input"
    }}
    disabled={{@isDisabled}}
    placeholder={{@placeholder}}
    type={{or @type "text"}}
    value={{@value}}
    {{(if
      (and @onChange (not @isDisabled))
      (modifier this.on "change" this.changeHandler)
    )}}
    {{(if
      (and @onInput (not @isDisabled))
      (modifier this.on "input" this.inputHandler)
    )}}
    ...attributes
  />
{{/let}}