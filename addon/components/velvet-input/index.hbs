{{#let (helper "-velvet/class" "velvet-input") as |class|}}
  <input
    class={{-velvet/class-list
      "form-input"
      (class)
      (class (or @color "primary"))
      (class (or @size "md"))
      (if @isInvalid (class "invalid"))
      (if @isRounded (class "rounded"))
    }}
    disabled={{@isDisabled}}
    type={{or @type "text"}}
    value={{@value}}
    {{(if (and @onChange (not @isDisabled)) (modifier this.on "change" (fn this.invokeHandler @onChange)))}}
    {{(if (and @onInput (not @isDisabled)) (modifier this.on "input" (fn this.invokeHandler @onInput)))}}
    ...attributes
  >
{{/let}}