<div
  class={{-velvet/class-list
    "velvet-radio-group"
    (concat "velvet-radio-group-" (or @size "md"))
    (if @isDisabled "velvet-radio-group-disabled")
  }}
  role="group"
  ...attributes
>
  {{yield
    (hash
      Radio=(component
        "velvet-radio"
        groupValue=@value
        inGroup=true
        isDisabled=@isDisabled
        name=(or @name this.uniqueName)
        onChangeGroup=@onChange
        size=@size
      )
    )
  }}
</div>