{{! @glint-nocheck }}

{{#let (helper "-velvet/class" "velvet-radio-group") as |class|}}
  <div
    class={{-velvet/class-list
      (class)
      (class (or @size "md"))
      (if @isDisabled (class "disabled"))
    }}
    role="group"
    ...attributes
  >
    {{yield
      (hash
        Radio=(component
          "velvet-radio"
          groupValue=@value
          inGroup=true
          isDisabled=@isDisabled
          name=(or @name this.uniqueName)
          onChange=@onChange
          size=@size
        )
      )
    }}
  </div>
{{/let}}