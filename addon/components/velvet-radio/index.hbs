<label
  class={{-velvet/class-list
    "velvet-radio"
    (concat "velvet-radio-" (or @size "md"))
    (if @isDisabled "velvet-radio-disabled")
  }}
>
  <input
    checked={{this.isChecked}}
    class="velvet-radio-input form-radio"
    disabled={{@isDisabled}}
    name={{@name}}
    type="radio"
    value={{this.valueAttr}}
    {{on "change" this.changeHandler}}
    ...attributes
  />
  {{yield}}
</label>