{{#let (helper "-velvet/class" "velvet-textarea") as |class|}}
  <textarea
    class={{-velvet/class-list
      "form-textarea"
      (class)
      (class (or @color "primary"))
      (class (or @size "md"))
      (if @isInvalid (class "invalid"))
    }}
    disabled={{@isDisabled}}
    placeholder={{@placeholder}}
    value={{@value}}
    {{(if
      (and @onChange (not @isDisabled))
      (modifier this.on "change" this.changeHandler)
    )}}
    {{(if
      (and @onInput (not @isDisabled))
      (modifier this.on "input" this.inputHandler)
    )}}
    ...attributes
  ></textarea>
{{/let}}