{{#let (helper "-velvet/class" "velvet-textarea") as |class|}}
  <textarea
    class={{-velvet/class-list
      (class)
      (class (or @color "primary"))
      (class (or @size "md"))
      (if @isDisabled (class "disabled"))
      (if @isInvalid (class "invalid"))
    }}
    disabled={{@isDisabled}}
    value={{@value}}
    {{(if @onChange (modifier this.on "change" (fn this.invokeHandler @onChange)))}}
    {{(if @onInput (modifier this.on "input" (fn this.invokeHandler @onInput)))}}
    ...attributes
  />
{{/let}}