<input
  class={{-velvet/class-list
    "velvet-input"
    (concat "velvet-input-" (-velvet/arg @size "md"))
    (concat "velvet-input-" (-velvet/arg @variant "primary"))
    (if @isInvalid "velvet-input-invalid")
    (if @isPill "velvet-input-pill")
    (if @isDisabled "velvet-input-disabled")
    "form-input"
  }}
  disabled={{@isDisabled}}
  placeholder={{@placeholder}}
  type={{-velvet/arg @type "text"}}
  value={{@value}}
  {{on "change" this.changeHandler}}
  {{on "input" this.inputHandler}}
  ...attributes
/>