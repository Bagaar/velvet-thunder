{{! @glint-nocheck }}

{{#let (helper "-velvet/class" "velvet-avatar") as |class|}}
  <div
    class={{-velvet/class-list
      (class)
      (class (or @size "md"))
      (class (or @variant "primary"))
      (if @isRound (class "round"))
    }}
    ...attributes
  >
    {{#if @src}}
      <img alt={{@name}} class={{class "image"}} src={{@src}} />
    {{else if @name}}
      {{this.initials}}
    {{else if @initials}}
      {{@initials}}
    {{else}}
      ?
    {{/if}}
  </div>
{{/let}}