{
  "private": true,
  "repository": "https://github.com/bagaar/velvet-thunder",
  "license": "MIT",
  "author": "Bagaar",
  "scripts": {
    "build": "pnpm --filter velvet-thunder build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter velvet-thunder start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@glint/core": "^1.2.1",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-ember-template-tag": "^2.0.1"
  },
  "pnpm": {
    "overrides": {
      "@types/eslint": "^7.0.0"
    },
    "patchedDependencies": {
      "fix-bad-declaration-output@1.1.2": "patches/fix-bad-declaration-output@1.1.2.patch"
    }
  },
  "volta": {
    "node": "18.19.1"
  }
}
