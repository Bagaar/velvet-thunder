{
  "name": "velvet-thunder",
  "version": "0.0.0",
  "description": "The default blueprint for ember-cli addons.",
  "keywords": [
    "ember-addon"
  ],
  "repository": "https://github.com/Bagaar/velvet-thunder",
  "license": "MIT",
  "author": "Bagaar",
  "typesVersions": {
    "*": {
      "test-support": [
        "declarations/addon-test-support/index.d.ts"
      ],
      "test-support/*": [
        "declarations/addon-test-support/*",
        "declarations/addon-test-support/*/index.d.ts"
      ],
      "*": [
        "declarations/addon/*",
        "declarations/addon/*/index.d.ts"
      ]
    }
  },
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "files": [
    "addon/",
    "addon-test-support/",
    "app/",
    "tailwind/",
    "index.js"
  ],
  "scripts": {
    "build": "pnpm tailwind:build && ember build --environment=production",
    "husky:install": "husky install",
    "lint": "concurrently --group --prefix-colors auto \"npm:lint:*(!fix)\"",
    "lint:css": "stylelint \"./**/*.css\"",
    "lint:css:fix": "stylelint \"./**/*.css\" --fix",
    "lint:fix": "concurrently --group --prefix-colors auto \"npm:lint:*:fix\"",
    "lint:format": "prettier . --cache --check",
    "lint:format:fix": "prettier . --cache --write",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "glint",
    "start": "ember serve",
    "tailwind:build": "tailwindcss -i ./docs-styles/index.css -o ./tests/dummy/public/assets/tailwind.css --minify",
    "tailwind:watch": "tailwindcss -i ./docs-styles/index.css -o ./tests/dummy/public/assets/tailwind.css --watch",
    "test": "concurrently \"npm:lint\" \"npm:test:*\" --names \"lint,test:\"",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each"
  },
  "lint-staged": {
    "*.{css,hbs,js,json,md,ts,yml}": "prettier --cache --write",
    "*.css": "stylelint --fix",
    "*.hbs": "ember-template-lint --fix",
    "*.{js,ts}": "eslint --fix"
  },
  "dependencies": {
    "@babel/core": "^7.23.5",
    "@ember/test-waiters": "^3.1.0",
    "@embroider/util": "^1.12.1",
    "@floating-ui/dom": "^1.5.3",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "ember-auto-import": "^2.7.0",
    "ember-cli-babel": "^8.2.0",
    "ember-cli-htmlbars": "^6.3.0",
    "ember-modifier": "^4.0.0",
    "ember-truth-helpers": "^4.0.3"
  },
  "devDependencies": {
    "@babel/generator": "^7.23.5",
    "@babel/parser": "^7.23.5",
    "@babel/traverse": "^7.23.5",
    "@docfy/ember": "^0.7.0",
    "@ember/optional-features": "^2.0.0",
    "@ember/test-helpers": "^3.2.1",
    "@embroider/test-setup": "^3.0.3",
    "@glint/core": "^1.2.1",
    "@glint/environment-ember-loose": "^1.2.1",
    "@glint/template": "^1.2.1",
    "@percy/cli": "^1.27.4",
    "@percy/ember": "^4.2.0",
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tsconfig/ember": "^3.0.2",
    "@types/qunit": "^2.19.9",
    "@types/rsvp": "^4.0.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "broccoli-asset-rev": "^3.0.0",
    "concurrently": "^8.2.2",
    "ember-cli": "~5.4.0",
    "ember-cli-clean-css": "^3.0.0",
    "ember-cli-dependency-checker": "^3.3.2",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-load-initializers": "^2.1.2",
    "ember-page-title": "^8.1.0",
    "ember-qunit": "^8.0.2",
    "ember-resolver": "^11.0.1",
    "ember-source": "~5.4.0",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^5.13.0",
    "ember-try": "^3.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ember": "^11.11.1",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-qunit": "^8.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "loader.js": "^4.7.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "qunit": "^2.20.0",
    "qunit-dom": "^3.0.0",
    "rehype-autolink-headings": "^5.0.0",
    "rehype-highlight": "^4.1.0",
    "rehype-wrap-all": "^1.1.0",
    "release-it": "^16.2.1",
    "rimraf": "^5.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0"
  },
  "peerDependencies": {
    "@ember/test-helpers": "^2.0.0",
    "@glint/template": "^1.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "ember-source": "^4.0.0",
    "tailwindcss": "^3.0.0"
  },
  "packageManager": "pnpm@8.6.11",
  "engines": {
    "node": ">= 18"
  },
  "volta": {
    "node": "18.12.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "pnpm": {
    "overrides": {
      "@glimmer/validator": "0.84.3",
      "@types/eslint": "^8.0.0"
    },
    "overridesMeta": {
      "@glimmer/validator": "@glimmer/tracking brings in an outdated version, which causes type errors",
      "@types/eslint": "https://github.com/lint-todo/utils/pull/532"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
