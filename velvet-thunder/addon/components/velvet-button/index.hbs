{{#let (helper "-velvet/class" "velvet-button") as |class|}}
  {{#let
    (-velvet/class-list
      (class)
      (class (or @size "md"))
      (class (or @variant "primary"))
      (if @isPill (class "pill"))
    )
    as |className|
  }}
    {{#if @isRenderless}}
      {{yield (hash class=className)}}
    {{else}}
      <button
        class={{className}}
        disabled={{@isDisabled}}
        type={{or @type "button"}}
        {{(if
          (and @onClick (not @isDisabled)) (modifier this.on "click" @onClick)
        )}}
        ...attributes
      >
        {{#if @isLoading}}
          <VelvetSpinner />
        {{/if}}
        {{yield}}
        {{#if @isDisclosure}}
          <VelvetDisclosureIcon class={{class "disclosure-icon"}} />
        {{/if}}
      </button>
    {{/if}}
  {{/let}}
{{/let}}