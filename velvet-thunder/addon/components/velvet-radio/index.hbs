{{#let (helper "-velvet/class" "velvet-radio") as |class|}}
  <label
    class={{-velvet/class-list
      (class)
      (class (or @size "md"))
      (if @isDisabled (class "disabled"))
    }}
  >
    <input
      checked={{if @inGroup (eq @value @groupValue) @isChecked}}
      class={{-velvet/class-list (class "input") "form-radio"}}
      disabled={{@isDisabled}}
      name={{@name}}
      type="radio"
      value={{@value}}
      {{(if
        (and @onChange (not @isDisabled))
        (modifier
          this.on
          "change"
          (if @inGroup this.changeGroupHandler this.changeHandler)
        )
      )}}
      ...attributes
    />
    {{yield}}
  </label>
{{/let}}